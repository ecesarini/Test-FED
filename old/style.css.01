* {
	box-sizing: border-box;
}

body {
	width: 100%;
	height: 100vh;
	margin: 0;
}

.btn-container {
	width: 10vw;
	margin: auto;
}

.btn-01 {
	width: 100%;
	margin: 100px auto 0 auto;
	padding: 5px;
	color: black;
	background-color: grey;
	font-size: 15px;
	font-weight: 700;
	border: 3px solid black;
}

.btn-01:hover {
	cursor: pointer;
	background-color: lightgray;
	border: 2px solid darkgray;
}